{{>header}}
<div class="container mt-4">
  <div class="row">
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th scope="col">Account Number</th>
          <th scope="col">Name</th>
          <th scope="col">Balance</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
        <tr>
          <td>{{this._id}}</td>
          <td contenteditable='false' id="name">{{this.name}}</td>
          <td contenteditable='false' id="balance">{{this.balance}}</td>
          <td id="buttons">
            <button class="btn btn-success" id="update" value="{{this._id}}" title="Edit customer">
              <i class="fas fa-pencil-alt"></i>
            </button>
            <button class="btn btn-danger" id="delete" value="{{this._id}}">
              <i class="fas fa-trash"></i>
            </button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <button id="showHide" class="btn btn-primary mx-3">Add Customer</button>
    {{>customerForm}}
  </div>
</div>
{{>footer}}